<?xml version="1.1" encoding="UTF-8"?>
<!DOCTYPE listaAutomoveis [
    <!ELEMENT listaAutomoveis (automovel*)>
    <!ELEMENT automovel (descricao, preco, caracteristicas)>
    <!ATTLIST automovel id ID #REQUIRED>
    <!ELEMENT descricao (#PCDATA)>
    <!ATTLIST descricao combustivel (GASOLINA | GASOLEO | GPL) #REQUIRED>
    <!ELEMENT preco (#PCDATA)>
    <!ELEMENT caracteristicas (cor, quilometragem, fotografia*, obs)>
    <!ELEMENT cor (#PCDATA)>
    <!ATTLIST cor nome CDATA #REQUIRED>
    <!ELEMENT quilometragem (#PCDATA)>
    <!ELEMENT fotografia (#PCDATA)>
    <!ATTLIST fotografia id ID #REQUIRED>
    <!ELEMENT obs (#PCDATA)>


]>
<listaAutomoveis>
    <automovel id="1">
        <descricao combustivel="GASOLINA"></descricao>
        <preco></preco>

        <caracteristicas>
            <cor nome="vermelho"/>
            <quilometragem>300</quilometragem>
            <fotografia id="1"/>
            <fotografia id="2"/>
            <obs>Isso é uma observação</obs>
        </caracteristicas>
    </automovel>

  
    <automovel id="2">
        <descricao combustivel="GPL"></descricao>
        <preco></preco>

        <caracteristicas>
            <cor nome="azul"/>
            <quilometragem></quilometragem>
            <fotografia id="1"/>
            <fotografia id="2"/>
            <obs>Isso é uma observação</obs>
        </caracteristicas>
    </automovel>
</listaAutomoveis>